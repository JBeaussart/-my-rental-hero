<div class="container">
  <h2><%= "#{current_user.first_name} #{current_user.last_name}" %></h2>
  <h2><%= current_user.email %></h2>
  <h2><%= current_user.company %></h2>

  <% current_user.super_heros.each do |super_hero| %>
    <li>
      <%= super_hero.nickname %>
      <%= link_to '(edit)', edit_super_hero_path(super_hero) %>
      <%= link_to super_hero_path(super_hero), method: :delete do %>
        <i class="fa fa-trash"></i>
      <% end %>
    </li>
  <% end %>
  <%= link_to 'Add a Super Hero!', new_super_hero_path, class:'btn btn-success' %>
  <%= link_to "Edit Profil", edit_user_registration_path, class:'btn btn-info' %>

  <% if !current_user.company.nil? %>
    <%= link_to 'Create Super Hero',  new_super_hero_path %>
  <% end %>
</div>
