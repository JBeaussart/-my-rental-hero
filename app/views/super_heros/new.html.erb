<div class="position-relative">
  <div class="container">
    <div class="row mt-10 rounded">
      <div class="col-6 m-auto mt-5 w-50 bg-white rounded p-5 border bg-transparent text-white">
        <h1 class="mb-10">Ajouter un Super HÃ©ros</h1>
        <%= simple_form_for [ @super_hero ] do |f| %>
          <%= f.input :nickname, label: 'Nom' %>
          <%= f.input :description %>
          <%= f.input :punchline %>
          <%= f.input :address, label: 'Adresse' %>
          <%= f.input :price_cents, label: 'Prix journalier ($)' %>
          <%= f.input :photo, as: :file %>
          <%= f.submit "Valider", class: "btn btn-success" %>
